#!/usr/bin/env bash

CONFIG_PATH="${HOME}/.config/alacritty/alacritty.yml"
CONFIG_PATH=$(realpath "${CONFIG_PATH}")
if [[ -z "${CONFIG_PATH}" ]]; then
  exit 1
fi

OPACITY_VALUE_ORIGINAL=$(rg --no-line-number --trim 'opacity:' "${CONFIG_PATH}")
OPACITY_VALUE_ORIGINAL="${OPACITY_VALUE_ORIGINAL#opacity: }"
if [[ -z "${OPACITY_VALUE_ORIGINAL}" ]]; then
  exit 1
fi

if [[ 1 == "${OPACITY_VALUE_ORIGINAL}" ]]; then
  OPACITY_VALUE_NEW=0.5
else
  OPACITY_VALUE_NEW=1
fi

sed -i '' "s/opacity: ${OPACITY_VALUE_ORIGINAL}/opacity: ${OPACITY_VALUE_NEW}/g" "${CONFIG_PATH}"
