#!/usr/bin/env bash

if ping -q -c 1 api.github.com &>/dev/null; then
	echo 'Can already resolve api.github.com'
	exit 0
fi

if [ -f /etc/resolv.conf ]; then
	echo 'Deleting /etc/resolv.conf'
	sudo rm /etc/resolv.conf
fi

echo 'Linking custom resolv.conf'
sudo ln -s "${HOME}/.dotfiles/templates/resolv.conf" /etc/resolv.conf
sudo systemctl restart dnsmasq
