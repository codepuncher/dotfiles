#!/usr/bin/env bash

pwd="${1}"
cmd=$(tmux display-message -p -F "#{pane_current_command}")

if [[ "${cmd}" != @(zsh|nvim) ]]; then
  echo "${cmd}"
elif [[ $pwd =~ 'bedrock' ]]; then
  basename "${pwd%bedrock*}"
elif [[ $pwd =~ 'trellis' ]]; then
  basename "${pwd%trellis*}"
else
  echo "#{b:pane_current_path}"
fi
